{
  "forms": [
    {
      "form_id": "don_xin_viec",
      "title": "Đơn xin việc",
      "aliases": [
        "xin việc",
        "apply job",
        "đơn tuyển dụng"
      ],
      "fields": [
        {
          "name": "full_name",
          "label": "Họ và tên",
          "type": "string",
          "required": true,
          "example": "Nguyễn Văn A",
          "validators": [
            {
              "type": "length",
              "min": 2,
              "max": 100,
              "message": "Tên nên dài 2–100 ký tự."
            }
          ]
        },
        {
          "name": "dob",
          "label": "Ngày sinh",
          "type": "date",
          "required": true,
          "example": "12/10/1950",
          "validators": [
            {
              "type": "date_range",
              "min": "1930-01-01",
              "max": "2009-12-31"
            }
          ]
        },
        {
          "name": "address",
          "label": "Địa chỉ",
          "type": "address",
          "required": true,
          "example": "123 Lê Lợi, Đà Nẵng"
        },
        {
          "name": "phone",
          "label": "Số điện thoại",
          "type": "phone",
          "required": true,
          "example": "0901234567",
          "pattern": "^0\\d{9,10}$",
          "confirm_if_uncertain": "Cháu nghe là {{value}}. Đúng chưa ạ?"
        },
        {
          "name": "email",
          "label": "Email",
          "type": "email",
          "required": false,
          "validators": [
            {
              "type": "regex",
              "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$",
              "message": "Email chưa đúng."
            }
          ]
        },
        {
          "name": "position",
          "label": "Vị trí ứng tuyển",
          "type": "string",
          "required": true,
          "example": "Nhân viên kế toán"
        },
        {
          "name": "experience",
          "label": "Kinh nghiệm làm việc",
          "type": "multiline",
          "required": false
        }
      ]
    },
    {
      "form_id": "don_xin_nghi_phep",
      "title": "Đơn xin nghỉ phép",
      "aliases": [
        "nghỉ phép",
        "leave request"
      ],
      "fields": [
        {
          "name": "full_name",
          "label": "Họ và tên",
          "type": "string",
          "required": true
        },
        {
          "name": "department",
          "label": "Bộ phận",
          "type": "string",
          "required": true
        },
        {
          "name": "start_date",
          "label": "Từ ngày",
          "type": "date",
          "required": true
        },
        {
          "name": "end_date",
          "label": "Đến ngày",
          "type": "date",
          "required": true
        },
        {
          "name": "reason",
          "label": "Lý do nghỉ phép",
          "type": "multiline",
          "required": true
        },
        {
          "name": "contact",
          "label": "Số liên hệ khi cần",
          "type": "phone",
          "required": false
        }
      ]
    },
    {
      "form_id": "giay_uy_quyen",
      "title": "Giấy ủy quyền",
      "aliases": [
        "ủy quyền",
        "giay uy quyen"
      ],
      "fields": [
        {
          "name": "grantor_name",
          "label": "Người ủy quyền",
          "type": "string",
          "required": true
        },
        {
          "name": "grantee_name",
          "label": "Người được ủy quyền",
          "type": "string",
          "required": true
        },
        {
          "name": "id_number",
          "label": "Số CCCD/CMND",
          "type": "string",
          "required": true,
          "pattern": "^[0-9]{9,12}$"
        },
        {
          "name": "scope",
          "label": "Phạm vi ủy quyền",
          "type": "multiline",
          "required": true
        },
        {
          "name": "effective_date",
          "label": "Ngày bắt đầu hiệu lực",
          "type": "date",
          "required": true
        },
        {
          "name": "expiry_date",
          "label": "Ngày hết hiệu lực",
          "type": "date",
          "required": false
        }
      ]
    },
    {
      "form_id": "xac_nhan_cu_tru",
      "title": "Giấy xác nhận cư trú",
      "aliases": [
        "xác nhận cư trú",
        "residency cert"
      ],
      "fields": [
        {
          "name": "full_name",
          "label": "Họ và tên",
          "type": "string",
          "required": true
        },
        {
          "name": "dob",
          "label": "Ngày sinh",
          "type": "date",
          "required": true
        },
        {
          "name": "id_number",
          "label": "Số CCCD/CMND",
          "type": "string",
          "required": true
        },
        {
          "name": "current_address",
          "label": "Địa chỉ cư trú hiện tại",
          "type": "address",
          "required": true
        },
        {
          "name": "purpose",
          "label": "Mục đích xác nhận",
          "type": "multiline",
          "required": false
        }
      ]
    },
    {
      "form_id": "don_nhan_luong_huu",
      "title": "Đơn đề nghị nhận lương hưu qua tài khoản",
      "aliases": [
        "lương hưu",
        "hưu trí"
      ],
      "fields": [
        {
          "name": "full_name",
          "label": "Họ và tên",
          "type": "string",
          "required": true
        },
        {
          "name": "dob",
          "label": "Ngày sinh",
          "type": "date",
          "required": true
        },
        {
          "name": "id_number",
          "label": "Số CCCD/CMND",
          "type": "string",
          "required": true
        },
        {
          "name": "bank_name",
          "label": "Tên ngân hàng",
          "type": "string",
          "required": true
        },
        {
          "name": "account_number",
          "label": "Số tài khoản",
          "type": "string",
          "required": true
        },
        {
          "name": "branch",
          "label": "Chi nhánh ngân hàng",
          "type": "string",
          "required": false
        },
        {
          "name": "phone",
          "label": "Số điện thoại liên hệ",
          "type": "phone",
          "required": false
        }
      ]
    }
  ]
}